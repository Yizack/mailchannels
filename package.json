{
  "name": "mailchannels-sdk",
  "version": "0.7.0",
  "description": "Node.js SDK to integrate MailChannels API into your JavaScript or TypeScript server-side applications.",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "mailchannels",
    "javascript",
    "typescript",
    "node",
    "sdk",
    "email"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yizack/mailchannels.git"
  },
  "homepage": "https://mailchannels.yizack.com",
  "author": {
    "name": "Yizack Rangel",
    "email": "yizackr@gmail.com",
    "url": "https://yizack.com"
  },
  "main": "./dist/mailchannels.mjs",
  "exports": {
    ".": {
      "types": "./dist/mailchannels.d.mts",
      "import": "./dist/mailchannels.mjs"
    }
  },
  "types": "./dist/mailchannels.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "prepack": "pnpm build",
    "release": "pnpm lint && pnpm test && pnpm build && changelogen --release && git push --follow-tags",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest run --reporter=verbose --coverage",
    "test:types": "tsc --noEmit",
    "test:watch": "vitest watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "(git fetch --unshallow -q || git fetch --all -q) && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:snippets": "jiti docs/scripts/snippets"
  },
  "dependencies": {
    "ofetch": "^2.0.0-alpha.3"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@stylistic/eslint-plugin": "^5.7.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "changelogen": "^0.6.2",
    "eslint": "^9.39.2",
    "eslint-plugin-import-x": "^4.16.1",
    "jiti": "^2.6.1",
    "scule": "^1.3.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vitepress": "^v2.0.0-alpha.15",
    "vitepress-plugin-group-icons": "^1.6.5",
    "vitepress-plugin-llms": "^1.10.0",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@10.28.0"
}
