{
  "name": "mailchannels-sdk",
  "version": "0.7.3",
  "description": "Node.js SDK to integrate MailChannels API into your JavaScript or TypeScript server-side applications.",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "mailchannels",
    "javascript",
    "typescript",
    "node",
    "sdk",
    "email"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yizack/mailchannels.git"
  },
  "homepage": "https://mailchannels.yizack.com",
  "author": {
    "name": "Yizack Rangel",
    "email": "yizackr@gmail.com",
    "url": "https://yizack.com"
  },
  "main": "./dist/mailchannels.mjs",
  "exports": {
    ".": {
      "types": "./dist/mailchannels.d.mts",
      "default": "./dist/mailchannels.mjs"
    }
  },
  "types": "./dist/mailchannels.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "obuild",
    "prepack": "pnpm build",
    "release": "pnpm lint && pnpm test && pnpm build && changelogen --release && git push --follow-tags",
    "lint": "oxlint --threads 1",
    "lint:fix": "oxlint --fix --threads 1",
    "test": "vitest run --reporter=verbose --coverage",
    "test:types": "tsc --noEmit",
    "test:watch": "vitest watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "(git fetch --unshallow -q || git fetch --all -q) && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:snippets": "jiti docs/scripts/snippets"
  },
  "dependencies": {
    "ofetch": "^2.0.0-alpha.3"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.8.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "changelogen": "^0.6.2",
    "jiti": "^2.6.1",
    "obuild": "^0.4.27",
    "oxlint": "^1.43.0",
    "scule": "^1.3.0",
    "typescript": "^5.9.3",
    "vitepress": "^2.0.0-alpha.16",
    "vitepress-plugin-group-icons": "^1.7.1",
    "vitepress-plugin-llms": "^1.11.0",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.29.2"
}
